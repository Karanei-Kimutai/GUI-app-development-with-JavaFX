<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="475.0" prefWidth="391.0" spacing="10" styleClass="add-task-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxprojects.bettertodolistapp.AddTaskPageController">

    <Label styleClass="header-label" text="Add a New Task" />

    <TextField fx:id="taskField" promptText="Enter task here" styleClass="task-field" />

    <Button onAction="#handleAddTask" styleClass="btn-add-task" text="Add Task" />
    <Button onAction="#handleViewTasks" styleClass="btn-view-tasks" text="View Tasks" />

</VBox>
